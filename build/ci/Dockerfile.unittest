FROM golang:1.23

ENV GO111MODULE=on \
    GOROOT=/usr/local/go \
    WORKDIR=/go/src/github.com/IBM/csi-volume-group-operator
WORKDIR $WORKDIR
RUN go install github.com/onsi/ginkgo/v2/ginkgo@v2.22.0 \
    && go install sigs.k8s.io/controller-runtime/tools/setup-envtest@latest
COPY Makefile .

RUN make kustomize \
    && make controller-gen

COPY . .

CMD ["make", "test"]
